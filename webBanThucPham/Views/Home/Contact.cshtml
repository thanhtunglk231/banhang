@model webBanThucPham.Models.Page

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    <div class="blog-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 order-1">
                    @if (Model != null)
                    {
                        <article class="blog-post">
                            <!-- Tiêu đề bài viết -->
                            <h1 class="blog-title">@Model.Title</h1>

                            <!-- Ngày tạo bài viết -->
                            <p class="text-muted small">
                                <i class="fa fa-calendar me-1"></i> @Model.CreateDate?.ToString("dd/MM/yyyy")
                            </p>

                            <!-- Hình ảnh bài viết -->
                            @if (!string.IsNullOrEmpty(Model.Thumb))
                            {
                                <img src="@Model.Thumb" class="img-fluid rounded mb-3" alt="@Model.Title">
                            }

                            <!-- Nội dung bài viết -->
                            <div class="blog-content">
                                @Html.Raw(Model.Contents)
                            </div>

                            <!-- Phần bản đồ -->
                            <div class="map-area mt-4">
                                <h3 class="mb-3">Vị trí của chúng tôi</h3>
                                <div class="ratio ratio-16x9 shadow-sm rounded">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d29786.545558584705!2d105.59615805!3d21.059949849999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3134575db3579c91%3A0xce822e06e8a60d25!2zSMawxqFuZyBOZ-G6o2ksIFRo4bqhY2ggVGjhuqV0LCBIw6AgTuG7mWk!5e0!3m2!1svi!2s!4v1746853063946!5m2!1svi!2s"
                                            style="border:0;"
                                            allowfullscreen=""
                                            loading="lazy">
                                    </iframe>
                                </div>
                            </div>
                        </article>
                    }
                    else
                    {
                        <!-- Phần lỗi 404 -->
                        <div class="error-404-area section-space-top-100">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="error-404-content">
                                            <h1 class="title mb-5">404</h1>
                                            <h2 class="sub-title mb-4">Không tìm thấy trang!</h2>
                                            <p class="short-desc mb-7">
                                                Có vẻ như không tìm thấy nội dung tại đây. Hãy thử nội dung khác hoặc quay lại trang chủ!
                                            </p>
                                            <div class="button-wrap">
                                                <a class="btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" href="/">Quay lại trang chủ</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-lg-3 order-2 pt-10 pt-lg-0">
                    @if (ViewBag.Pages != null)
                    {
                        @await Html.PartialAsync("_SidebarPages", (List<Page>)ViewBag.Pages)
                    }
                </div>
            </div>
        </div>
    </div>
</main>