@model webBanThucPham.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="mb-4">Chỉnh Sửa Vai Trò</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <div class="mb-3">
                <label asp-for="RoleName" class="form-label">Tên Vai Trò</label>
                <input asp-for="RoleName" class="form-control" placeholder="Nhập tên vai trò" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô Tả</label>
                <input asp-for="Description" class="form-control" placeholder="Nhập mô tả" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
        </div>
    </div>
</div>


