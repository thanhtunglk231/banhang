@model webBanThucPham.Models.Account

@{
    ViewData["Title"] = "Thông tin chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Thông tin tài khoản</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Số điện thoại:</strong> @Html.DisplayFor(model => model.Phone)</p>
                    <p><strong>Email:</strong> @Html.DisplayFor(model => model.Email)</p>
                    <p><strong>Mật khẩu:</strong> @Html.DisplayFor(model => model.Password)</p>
                    <p><strong>Chuỗi bảo mật:</strong> @Html.DisplayFor(model => model.Salt)</p>
                </div>
                <div class="col-md-6">
                    <p>
                        <strong>Trạng thái:</strong>
                        @if (Model?.Active == true)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Bị khóa</span>
                        }
                    </p>
                    <p><strong>Họ và tên:</strong> @Html.DisplayFor(model => model.FullName)</p>
                    <p><strong>Đăng nhập lần cuối:</strong> @Html.DisplayFor(model => model.LastLogin)</p>
                    <p><strong>Ngày tạo:</strong> @Html.DisplayFor(model => model.CreateDate)</p>
                    <p>
                        <strong>Vai trò:</strong>
                        <span class="badge bg-info">@Model?.Role?.RoleName</span>
                    </p>

                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.AccountId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-list"></i> Danh sách
            </a>
        </div>
    </div>
</div>
